# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:mac)

platform :mac do
  desc "Build"
  lane :build do
    build_app(
      scheme: "NoisyTyper",
      archive_path: "./build/NoisyTyper.xcarchive"
      )
    automatic_code_signing(
        path: "NoisyTyper.xcodeproj",
        use_automatic_signing: true
        )
  end
end
